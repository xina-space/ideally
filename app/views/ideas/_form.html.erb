<%= simple_form_for([@category, @idea]) do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :status, priority: ['incomplete'], collection: [ "incomplete", "in progress", "done"]  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:'btn btn-outline-primary'  %>
  </div>
<% end %>
